{
    "name": "backend",
    "version": "1.0.0",
    "description": "Backend part of the website",
    "author": "Vitaly Kryvenko",
    "license": "MIT",
    "scripts": {
        "gen:rsa-keypair": "ts-node ./scripts/generate-rsa-keypair.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node --transpile-only -r tsconfig-paths/register src/main.ts",
        "dev": "ts-node-dev --respawn -r tsconfig-paths/register --inspect=0.0.0.0:9229 -- src/main.ts",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest && cat ./coverage/lcov.info | coveralls",
        "test:debug": "node --inspect -r ts-node/register -r tsconfig-paths/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "nest:gen": "nest generate --flat --no-spec"
    },
    "dependencies": {
        "@nestjs/common": "latest",
        "@nestjs/core": "latest",
        "@nestjs/graphql": "^6.0.5",
        "@nestjs/jwt": "^6.0.0",
        "@nestjs/passport": "^6.0.0",
        "@nestjs/platform-express": "latest",
        "@nestjs/platform-fastify": "^6.1.0",
        "@nestjs/swagger": "latest",
        "@nestjs/typeorm": "latest",
        "apollo-server-express": "^2.4.8",
        "dotenv": "latest",
        "generate-rsa-keypair": "^0.1.2",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "latest",
        "swagger-ui-express": "latest",
        "ts-node": "^8.0.3",
        "tsconfig-paths": "latest",
        "type-graphql": "^0.17.1",
        "typeorm": "latest",
        "typescript": "^3.4.5"
    },
    "devDependencies": {
        "@compodoc/compodoc": "latest",
        "@nestjs/schematics": "latest",
        "@nestjs/testing": "latest",
        "@types/dotenv": "latest",
        "@types/express": "latest",
        "@types/jest": "^24.0.11",
        "@types/passport-jwt": "^3.0.1",
        "@types/pg": "latest",
        "@types/supertest": "latest",
        "jest": "latest",
        "nodemon": "latest",
        "supertest": "latest",
        "ts-jest": "^24.0.2",
        "ts-node-dev": "^1.0.0-pre.32",
        "tsconfig-paths-jest": "0.0.1"
    }
}
